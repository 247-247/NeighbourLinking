<?xml version="1.0" encoding="utf-8"?>

    <ScrollView  xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <!--not in use-->
            <ImageButton
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_person_outline_black_32dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText

                android:id="@+id/first_name_edit_profileActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/customborder_for_blog_row"
                android:ems="10"
                android:hint="First Name..."
                android:inputType="textPersonName"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/last_name_edit_profileActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name..."
                android:inputType="textPersonName"
                android:background="@drawable/customborder_for_blog_row"
                android:layout_below="@+id/first_name_edit_profileActivity"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/adress_edit_profileActity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_name_edit_profileActivity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/customborder_for_blog_row"
                android:ems="10"
                android:hint="Contact#..."
                android:inputType="phone" />
            <Button
                android:id="@+id/submit_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adress_edit_profileActity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/customborder_for_blog_row"
                android:text="Done" />
        </RelativeLayout>
    </ScrollView>

