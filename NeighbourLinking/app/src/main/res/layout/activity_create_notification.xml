<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waqarahmed.neighbourlinking.Activities.AdminActivities.CreateNotification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_edit_Nofification"
            android:hint="Title..."
            android:background="@drawable/customborder_for_blog_row"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/disc_edit_Nofification"
            android:lines="5"
            android:layout_marginTop="15dp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:hint="Discription..."
            android:background="@drawable/customborder_for_blog_row"/>
        <Button
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:id="@+id/send_btn_notification"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:text="Send"/>


    </LinearLayout>


</RelativeLayout>
