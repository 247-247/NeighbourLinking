<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waqarahmed.neighbourlinking.Activities.BrandActivities.UpDateBrandProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:id="@+id/image_brandPfofile"
            android:src="@drawable/profile_image_selection"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/name_brandProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name..."
            android:background="@drawable/customborder_for_blog_row"/>
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/contact_brandProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact..."
            android:inputType="phone"
            android:background="@drawable/customborder_for_blog_row"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shopNo_brandProfile"
            android:background="@drawable/gradient_spinner"
            android:entries="@array/house_arrays"></Spinner>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/customborder_for_blog_row"
            android:text="Save"
            android:id="@+id/doneBtn_brandProfile"/>



    </LinearLayout>



</RelativeLayout>
</ScrollView>