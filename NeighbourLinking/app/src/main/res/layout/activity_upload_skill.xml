<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waqarahmed.neighbourlinking.Activities.AdminActivities.UploadSkillActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/skill_image_skillActivty"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_person_outline_black_32dp"
           />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/skilname_editview_skillAvtivty"
            android:background="@drawable/customborder_for_blog_row"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/done_btn_skillAvtivty"
            android:text="Done"
            android:background="@drawable/customborder_for_blog_row"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
